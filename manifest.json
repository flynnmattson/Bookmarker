{
  "manifest_version": 2,

  "name": "Bookmarker",
  "description": "This extension gives you the capability of sending bookmarks directly to other Google users as well as publishing them on a live feed.",
  "version": "1.0",
  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'",

  "browser_action": {
    "default_icon": {
      "19": "./src/images/default-icon/default-icon_19x19.png",
      "38": "./src/images/default-icon/default-icon_38x38.png"
    },
    "default_popup": "./src/login.html"
  },

  "permissions": [
    "activeTab",
    "bookmarks",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
